<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MainPage"
             Visual="Material">

    <StackLayout Background="blue">
        <Frame BackgroundColor="#F00" Padding="24" CornerRadius="0">
            <Label Text="Calcular IMC" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Abelardo Cruz Leos"/>
        <Entry Placeholder="Altura" x:Name="altura" Keyboard="Numeric" BackgroundColor="Green"/>
        <Entry Placeholder="Peso" x:Name="peso" Keyboard="Numeric" BackgroundColor="Green"/>
        <Entry Placeholder="IMC" x:Name="IMC" IsEnabled="False" BackgroundColor="White"/>
        <Button Text="Calcular" Clicked="Button_Clicked" Background="RED"/>
    </StackLayout>

</ContentPage>
